<style lang="scss">
  main {
    background: rgb(248, 249, 250);
    background: linear-gradient(
      90deg,
      rgba(248, 249, 250, 1) 0%,
      rgba(233, 236, 239, 1) 52%,
      rgba(222, 226, 230, 1) 100%
    );

      section.first {
      @apply flex flex-col items-center justify-center h-screen w-full;


    section.hello {
      @apply flex flex-col justify-between w-2/4 p-10 h-min p-10 shadow-xl bg-white duration-700;

      &:hover {
        @apply shadow-2xl;
        transform: scale(1.025)
      }

      span.contact {
        @apply text-lg mt-10;

        a#email {
          @apply underline transition-all duration-700 hover:text-slate-600;
        }
      }
    }

    section.social-media-container {
      @apply flex mt-12;

      a.social-media {
        @apply flex items-center text-lg mx-6 transition-all duration-500;

        &:hover {
          @apply underline cursor-pointer translate-x-2;
        }

        svg {
          @apply mr-2;
        }
      }
    }
    }
  }
</style>
